  <!-- סקריפט נגישות -->
  <script src="https://cdn.enable.co.il/licenses/enable-L44070br8fhn4357-0625-71493/init.js"></script>
  <!-- סקריפט המבורגר -->
  <script>
    const hamburger = document.getElementById('hamburger');
    const navList = document.getElementById('navList');
    let navMobileOpen = false;
    function toggleNavMobile() {
      if (window.innerWidth <= 780) {
        navList.parentElement.classList.toggle('nav-mobile');
        navList.parentElement.classList.toggle('active');
        navMobileOpen = !navMobileOpen;
      }
    }
    hamburger.addEventListener('click', toggleNavMobile);
    // Close menu on resize up
    window.addEventListener('resize', function() {
      if (window.innerWidth > 780 && navMobileOpen) {
        navList.parentElement.classList.remove('nav-mobile', 'active');
        navMobileOpen = false;
      }
    });
    // Smooth scroll for nav
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          e.preventDefault();
          target.scrollIntoView({ behavior: 'smooth' });
          if (window.innerWidth <= 780 && navMobileOpen) {
            toggleNavMobile();
          }
        }
      });
    });
  </script>
</body>
